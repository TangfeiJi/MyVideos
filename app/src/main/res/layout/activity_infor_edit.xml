<?xml version="1.0" encoding="utf-8"?>
<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_multiple_status_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="29dp"
        android:paddingRight="29dp">

        <TextView
            style="@style/text_12_333"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="Click to upload your Avatar" />

        <com.asdcce.ddgfd.widget.RoundImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/user_heard" />

        <TextView
            style="@style/text_12_333"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="Please select your gender" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/img_default" />

            <ImageView
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/img_default" />
        </LinearLayout>


    </LinearLayout>
</com.classic.common.MultipleStatusView>