<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/toolbar_button</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/card_view_bg</item>
        <item name="android:textColor">@color/item_title</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="popupTheme">@style/ToolbarPopupTheme</item>
        <item name="theme">@style/ToolBarTheme</item>
    </style>


    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Base.App.Theme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="tabLayout_style" >
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_base" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_18_fff" parent="text_base" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_16_fff" parent="text_base" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="text_6_fff" parent="text_base" >
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_12_fff" parent="text_base" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="text_12_333"  parent="text_base" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tx_333</item>
    </style>
    <style name="text_18_333"  parent="text_base" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tx_333</item>
    </style>

    <style name="text_14_333" parent="text_base" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tx_333</item>
    </style>

    <style name="text_next" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_bg_ff6_90</item>
    </style>



    <style name="text_next_" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_bg_ff6_90</item>
    </style>

</resources>
